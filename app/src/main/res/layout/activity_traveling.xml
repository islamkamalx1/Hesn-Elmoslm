<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".traveling">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/travel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/safar_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#F6F3ED"
                android:padding="10dp"
                android:text="دعاء السفر"
                android:textSize="20sp" />

            <Button
                android:id="@+id/safar_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#F6F3ED"
                android:padding="10dp"
                android:text="دعاء العودة من السفر"
                android:textSize="20sp" />

            <Button
                android:id="@+id/twakol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#F6F3ED"
                android:padding="10dp"
                android:text="دعاء التوكل و تفويض الأمر"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tahween"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#F6F3ED"
                android:padding="10dp"
                android:text="دعاء تهوين السفر"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>