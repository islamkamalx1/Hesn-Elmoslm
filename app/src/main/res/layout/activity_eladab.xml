<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="35dp"
    android:orientation="vertical"
    tools:context=".eladab">

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:srcCompat="@drawable/connection" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/hosn_kholoq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:text="دعاء حسن الخلق"
                android:textSize="20sp" />

            <Button
                android:id="@+id/mkarm_akhlaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:text="دعاء للتحلي بمكارم الاخلاق"
                android:textSize="20sp" />

            <Button
                android:id="@+id/mahaba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:text="دعاء التسخير و المحبة"
                android:textSize="20sp" />

            <Button
                android:id="@+id/shar_elnas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:text="أدعية لابعاد شر الناس"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>